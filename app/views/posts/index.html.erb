<div class="container">
	<div class="row">
		<div class="posts-page col-md-4 filter-box">
			<h3>Filtering:</h3></br>
			<%= form_tag("/search", method:"get") do %>
	<div class="row">
		<div class="col-md-2">
		</div>
		<div class="col-md-5">
            <span>
            	<div class="location form-group">
	            	<%= select_tag "location", "<option selected disabled>Location</option><option>Ampang</option><option>Cheras</option><option>Sri Petaling</option><option>Gym</option><option>Kuala Lumpur</option><option>KLCC</option><option>Petaling Jaya</option><option>Subang Jaya</option><option>TTDI</option>".html_safe, class:"form-control" %>
              	</div>
            </span>
        </div>
    </div>
    <div class="row">
        <% @activities_bar.each do |activity|%>
	        <div class="acitivities form-group">
	        	<div class="col-md-4">
	        	</div>
	        	<div class="col-md-8">
            		<span>
            			<div class="box_label">
		           		<%= check_box_tag "activity" + "[" + activity.name + "]", activity.name %>
		            	<%= label_tag "activity" + "[" + activity.name + "]", activity.name %>
		            	</div>
	            	</span>
	            </div>	
        	</div>
        	<% end %>
    </div>
    <div class="row">
    	<div class="col-md-3">
    	
    	</div>
    	<div class="col-md-4">
    		Age:<%= number_field_tag 'age', nil, min: 1, max: 100%>
    	</div>
    </div>    
    <div class="row">
    	<div class="col-md-2">
    	</div>
    	<div class="col-md-8">
    		Number of persons:<%= number_field_tag 'person', nil, min: 1, max: 4%>
    	</div>
    </div>    
    <div class="row">
    	<div class="col-md-2">
    	</div>
    	<div class="col-md-5">
    		<%= select_tag "gender", "<option selected disabled>Gender</option><option>Male</option><option>Female</option>".html_safe %>
    	</div>
    </div>
    <div class="row">
    Language:
    </div>
    <div class="row">
    	<div class="col-md-2">
    	</div>
    	<div class="col-md-10">
	   		<%= check_box_tag "language[english]", "english" %>
	    	<%= label_tag "language_english", "English" %>
	   		<%= check_box_tag "language[malay]", "malay" %>
	    	<%= label_tag "language_malay", "Malay" %>
    	</div>
    </div>
    <div class="row">
        <div class="col-md-2">
    	</div>
    	<div class="col-md-10">
    		<%= check_box_tag "language[mandarin]", "mandarin" %>
	    	<%= label_tag "language_mandarin", "Mandarin" %>
	   		<%= check_box_tag "language[tamil]", "tamil" %>
	    	<%= label_tag "language_tamil", "Tamil" %>
    	</div>
    </div>
    <div class="row">
    Duration:
    </div>
    <div class="row">
        <div class="col-md-2">
    	</div>
    	<div class="col-md-10">
    		<%= check_box_tag "duration[12]", "1 2" %>
	    	<%= label_tag "duration_12", "1-2 hours" %>
	   		<%= check_box_tag "duration[34]", "3 4" %>
	    	<%= label_tag "duration_34", "3-4 hours" %>
    	</div>
    </div>
    <div class="row">
        <div class="col-md-2">
    	</div>
    	<div class="col-md-10">
    		<%= check_box_tag "duration[56]", "5 6" %>
	    	<%= label_tag "duration_56", "5-6 hours" %>
	   		<%= check_box_tag "duration[10]", "10+" %>
	    	<%= label_tag "duration_10", "10+ hours" %>
    	</div>
    </div>
    <div class="row">
    Time Of Day:
    </div>
    <div class="row">
        <div class="col-md-2">
    	</div>
    	<div class="col-md-10">
    		<%= check_box_tag "time[morning]", "morning" %>
	    	<%= label_tag "time_morning", "Morning" %>
	   		<%= check_box_tag "time[afternoon]", "afternoon" %>
	    	<%= label_tag "time_afternoon", "Afternoon" %>
    	</div>
    </div>
    <div class="row">
        <div class="col-md-2">
    	</div>
    	<div class="col-md-10">
    		<%= check_box_tag "time[evening]", "evening" %>
	    	<%= label_tag "time_evening", "Evening" %>
	   		<%= check_box_tag "time[night]", "night" %>
	    	<%= label_tag "time_night", "Night" %>
    	</div>
    </div>
    <div class="row">
    	<div class="col-md-2">
    	</div>
        <div class="col-md-5">
            <%= submit_tag "Search!", class: "form-control" %>
            <%end%>
        </div>
    </div>
		</div>
		<div class="posts-page col-md-8">
			<div class="container">
				<div class="row">
					<% @posts.each do |post|%>
						<div class="card col-md-3">
							<div class="photo-row">
							</div>
							<div class="description-row">
								<%= post.description%></br>
								<%= post.address%></br>
								<%= post.activity_type%></br>
								Speaks <%= post.language_type%></br>
								<%= post.user.last_name + " " + post.user.first_name%></br>
							</div>
							<div class="button-row">								
								<button id="myBtn">Request</button>
								<!-- The Modal -->
								<div id="myModal" class="modal">
								  <!-- Modal content -->
								  <div class="modal-content">
								    <span class="close">x</span>
								    <p>Are you sure?</p>
								    <%= button_to "Confirm", invitations_path(post_id: post.id)%>
								  </div>
								</div>
							</div> <!-- button-row -->
						</div> <!--  card col-md-3 -->
					<%end%>
				</div>   <!-- row -->
			</div>  <!-- container -->
		</div>  <!-- posts-page col md-8 -->
	</div>  <!-- row -->
</div> <!-- container -->



<script type="text/javascript">	
// Get the modal
var modal = document.getElementById('myModal');

// Get the button that opens the modal
var btn = document.getElementById("myBtn");

// Get the <span> element that closes the modal
var span = document.getElementsByClassName("close")[0];

// When the user clicks on the button, open the modal 
btn.onclick = function() {
    modal.style.display = "block";
}

// When the user clicks on <span> (x), close the modal
span.onclick = function() {
    modal.style.display = "none";
}

// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
    if (event.target == modal) {
        modal.style.display = "none";
    }
}

</script>