<%= form_for @post, html: {multipart: true} do |f| %>


  <div class="form-group">
    <label>Title</label>
    <%= f.text_area :title, placeholder: 'Provide a display title, limited to 70 characters', class: 'form-control', maxlength: '70' %>
  </div>

  <div class="form-group" id="description-box">
    <label>Description</label>
    <%= f.text_area :description, cols: 5, rows: 5, placeholder: 'Describe what would you like to do & share together', class: 'form-control' %>
  </div>


  <div class="form-group">
    <label>Location</label>
    <%= f.text_field :address, placeholder: 'Where would you like to meet?', class: 'form-control', id:'geo-input' %>
  </div>

  <div class="form-group">
    <label>Activity Type</label>
    <%= f.select :activity_type, [["Travel", "Travel"], ["Food", "Food"], ["Shopping", "Shopping"], ["Hiking", "Hiking"]], id: 'activity_type', prompt: 'Select...', class: 'form-control' %>
  </div>

  <div class="form-group">
    <label>Preferred Language</label>
    <%= f.select :language_type, [["Cantonese", "Cantonese"], ["English", "English"], ["Malay", "Malay"], ["Mandarin", "Mandarin"], ["Tamil", "Tamil"], ["Thai", "Thai"], ["Others", "Others"]], id: 'language_type', prompt: 'Select...', class: 'form-control' %>
  </div>

  <div class="form-group">
    <label>Preferred Gender</label>
    <%= f.select :gender, [["Male", "Male"], ["Female", "Female"], ["Any", "Any"], ["Better Not To Say", "Better Not To Say"]], id: 'gender', prompt: 'Select...', class: 'form-control' %>
  </div>

  <div class="form-group">
    <label>Preferred meetup session</label>
    <%= f.select :duration_type, [["Morning", "Morning"], ["Afternoon", "Afternoon"], ["Night", "Night"], ["Anytime", "Anytime"]], id: 'duration_type', prompt: 'Select...', class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>


<script>
  var input = document.getElementById('geo-input');
  var autocomplete = new google.maps.places.Autocomplete(input);
</script> 




