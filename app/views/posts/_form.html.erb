


<%= form_for @post, html: {multipart: true} do |f| %>

  <div class="form-group">
    <label>Activity Type</label>
    <%= f.select :activity_type, [["Travel", "Travel"], ["Food", "Food"], ["Shopping", "Shopping"], ["Hiking", "Hiking"]], id: 'activity_type', prompt: 'Select...', class: 'form-control' %>
  </div>

  <div class="form-group">
    <label>Language Used</label>
    <%= f.select :language_type, [["English", "English"], ["Malay", "Malay"], ["Mandarin", "Mandarin"], ["Tamil", "Tamil"]], id: 'language_type', prompt: 'Select...', class: 'form-control' %>
  </div>


  <div class="form-group">
    <label>Expire duration</label>
  <%= f.select :duration_type, [["1hours", "1hour"], ["2hours", "2hours"], ["5hours", "5hours"]], id: 'duration_type', prompt: 'Select...', class: 'form-control' %>
  </div>


  <div class="form-group">
    <label>Description</label>
    <%= f.text_field :description, placeholder: 'Description', class: 'form-control' %>
  </div>


  <div class="form-group">
    <label>Location</label>
    <%= f.text_field :address, placeholder: 'Location', class: 'form-control' %>
  </div>

  <div class="form-group">
    <label>Search Tag#</label>
    <%= f.text_field :search_tag, placeholder: 'Search tag', class: 'form-control' %>
  </div>



  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
